<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1><%= title %></h1>
        <a href="/" class="btn btn-secondary mb-3">Koti</a>

        <!-- Search Form -->
        <form method="get" action="/guestbook" class="mb-3">
            <input type="text" name="search" class="form-control" placeholder="Search messages" value="<%= searchQuery %>">
            <button type="submit" class="btn btn-primary mt-2">Search</button>
        </form>

        <hr>

        <h2>Messages</h2>
        <div id="messages">
            <% messages.forEach(function(message) { %>
                <div class="message">
                    <p><strong><%= message.name %></strong> (<%= message.country %>): <%= message.message %></p>
                    <small><%= new Date(message.date).toLocaleString() %></small>
                    <hr>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
