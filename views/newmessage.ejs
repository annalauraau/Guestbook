<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uusi viesti</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Kirjoita uusi viesti</h1>
        <form action="/newmessage" method="POST" onsubmit="return validateForm()">
            <div class="mb-3">
                <label for="name" class="form-label">Nimi:</label>
                <input type="text" class="form-control" id="name" name="name" required> <!-- Nimi kenttä -->
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">Maa:</label>
                <input type="text" class="form-control" id="country" name="country" required> <!-- Maa kenttä -->
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Viestisi:</label>
                <textarea class="form-control" id="message" name="message" rows="4" required></textarea> <!-- Viesti kenttä -->
            </div>
            <button type="submit" class="btn btn-primary">Lähetä</button>
            <a href="/" class="btn btn-secondary">Peruuta</a>
        </form>
    </div>

    <script>
        function validateForm() {
            const name = document.getElementById('name').value;
            const country = document.getElementById('country').value; // Lisätty maa-tarkistus
            const message = document.getElementById('message').value;

            if (!name || !country || !message) { // Tarkistetaan, että kaikki kentät on täytetty
                alert('Please fill in all fields before submitting.');
                return false; // Estetään lomakkeen lähettäminen
            }
            return true; // Sallitaan lomakkeen lähettäminen
        }
    </script>
</body>
</html>